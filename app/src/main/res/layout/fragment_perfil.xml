<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jhonlopera.nerd30.PerfilFragment"
    android:orientation="vertical"
    android:background="@drawable/fondo1234">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imagen_perfilf"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvfnombre"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:text="nombre jugador apellido "
                android:textColor="@color/whitesmoke"
                android:textSize="26sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvfcorreo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:gravity="center"
                android:text="jugador1@correo.algo"
                android:textColor="@color/whitesmoke"
                android:textSize="26sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvfedad"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:text="Otra informaciÃ³n"
                android:gravity="center"
                android:textColor="@color/whitesmoke"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:layout_margin="15dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:background="@drawable/nada" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
